---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Hero from '../components/Hero.astro';

const events = [
	{
		title: 'Event 1',
		date: '2023-03-15',
		time: '19:00',
		location: 'Kava Kave',
		desc: 'Description of the event.',
	},
	{
		title: 'Event 2',
		date: '2023-03-15',
		time: '19:00',
		location: 'Kava Kave',
		desc: 'Description of the event.',
	},
	{
		title: 'Event 3',
		date: '2023-03-15',
		time: '19:00',
		location: 'Kava Kave',
		desc: 'Description of the event.',
	},
]
---

<Layout title="Kava Kave">
	<Hero />

	<main>
		<!-- about snippet -->
		<div id="about-snippet" class="container mx-auto py-20">
			<div class="flex justify-center gap-16">
				<div class="prose">
					<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum</p>
		
					<a href="/about" role="button" class="btn btn-primary">Read more</a>
				</div>

				<div class="max-w-[400px] max-h-400px">
					<img src="https://placehold.co/700x400" alt="Placeholder image" class="w-full h-full object-cover rounded">
				</div>
			</div>
		</div>

		<!-- events snippet -->
		<div class="container mx-auto py-20">
			<div class="prose mx-auto mb-16">
				<h2 class="text-center">Events</h2>
			</div>

			<div class="grid grid-cols-3">
				{events.reverse().map(event => (
					<div class="card w-96 bg-base-100 shadow-xl mx-auto">
						<figure><img src="https://daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.jpg" alt="Shoes" /></figure>
						<div class="card-body">
							<h2 class="card-title">{ event.title }</h2>
							<small>{ event.date }</small>
							<p>{ event.desc }</p>
							<div class="card-actions">
								<a href="#" role="button" class="btn btn-secondary">View event</a>
							</div>
						</div>
					</div>
				))}
				
			</div>

			<a href="/events" role="button" class="btn btn-primary mt-12 ml-4">All events</a>
		</div>

		<!-- kava snippet -->
		<div class="my-16">
			<div class="relative flex flex-wrap justify-evenly" style="background-image: url(https://daisyui.com/images/stock/photo-1507358522600-9f71e620c44e.jpg);">
				<div class="absolute w-full h-full" style="background-color: rgba(0,0,0,0.6)"></div>
				
				<div class="z-10 px-16 py-32 prose text-neutral-content">
					<h3 class="text-neutral-content">Menu</h3>
					<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae.</p>
					<a href="/menu" role="button" class="btn btn-primary">Menu</a>
				</div>

				<div class="z-10 px-16 py-32 prose text-neutral-content">
					<h3 class="text-neutral-content">Kava</h3>
					<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae.</p>
					<a href="/kava" role="button" class="btn btn-secondary">Kava</a>
				</div>
			</div>
		</div>

		<!-- testimonials -->
		<div class="container mx-auto py-20">
			<div class="prose mx-auto mb-16">
				<h2 class="text-center">Testimonials</h2>
			</div>
			
			<div class="grid grid-cols-3 items-start">
				<div class="chat chat-start">
					<div class="chat-header mb-4">Customer 1</div>	
					<div class="chat-bubble">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae.</div>
				</div>	
				<div class="chat chat-start">
					<div class="chat-header mb-4">Customer 2</div>	
					<div class="chat-bubble">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quae.</div>
				</div>	
				<div class="chat chat-start">
					<div class="chat-header mb-4">Customer 3</div>	
					<div class="chat-bubble">Lorem ipsum dolor sit amet consectetur adipisicing elit. </div>
				</div>	
			</div>
		</div>
	</main>
</Layout>
