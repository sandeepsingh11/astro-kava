---
import Layout from "../layouts/Layout.astro"

const storeInfo = {
    name: "Kava Kave",
    address: "123 Street\nCity\nState, ZIP",
    phone: "123-456-7890",
    email: "info@yourstore.com",
    hours: "Mon-Fri: 9am-5pm\nSat-Sun: 10am-4pm"
}
---

<Layout title="Contact">
    <main>
        <div class="prose mx-auto my-20">
            <h1 class="text-center mb-16">Contact</h1>
        </div>

        <div class="container mx-auto mb-20 flex gap-8">
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30013.45175253138!2d-80.10285739862691!3d26.687812041739328!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d8d62b565f5441%3A0xdfe06cce855176be!2sPalm%20Beach%20International%20Airport!5e0!3m2!1sen!2sus!4v1709765725883!5m2!1sen!2sus" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="prose">
                <!-- <img src="https://placehold.co/700x400" alt=""> -->
                <h2>{storeInfo.name}</h2>
                <p class="whitespace-pre-wrap">{storeInfo.address}</p>
                <p>{storeInfo.phone}</p>
                <p>{storeInfo.email}</p>
                <p class="whitespace-pre-wrap">{storeInfo.hours}</p>
            </div>
        </div>

        <div class="container mx-auto mb-20">
            <div class="prose mx-auto"><h2 class="text-center mb-8">Send us a message!</h2></div>

            <form action="" class="max-w-2xl mx-auto">
                <div class="grid grid-cols-2 gap-4">
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text">Name</span>
                        </div>
                        <input name="name" type="text" placeholder="Your name" class="input input-bordered input-primary w-full" required />
                    </label>

                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text">Email</span>
                        </div>
                        <input name="email" type="text" placeholder="Your email" class="input input-bordered input-primary w-full" required />
                    </label>

                    <label class="form-control w-full col-span-2">
                        <div class="label">
                            <span class="label-text">Subject</span>
                        </div>
                        <input name="subject" type="text" placeholder="Subject line" class="input input-bordered input-primary w-full" required />
                    </label>
                    <label class="form-control w-full col-span-2">
                        <div class="label">
                            <span class="label-text">Message</span>
                        </div>
                        <textarea class="textarea textarea-primary w-full" placeholder="Your awesome message" required></textarea>
                    </label>
                </div>

                <button class="btn btn-primary mt-4" type="submit">Send</button>
            </form>
        </div>
    </main>
</Layout>